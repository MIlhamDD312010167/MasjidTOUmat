<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".JadwalKajian">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jadwal Kajian"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="100dp"
        android:src="@drawable/baseline_notifications"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="331dp"
        tools:layout_editor_absoluteY="16dp" />

    <SearchView
        android:id="@+id/pencarian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:iconifiedByDefault="false"
        android:queryHint="Silahkan Cari"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="56dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/play1"
        android:layout_width="141dp"
        android:layout_height="83dp"
        android:src="@drawable/baseline_play"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="129dp" />

    <Button
        android:id="@+id/btnVideo1"
        android:layout_width="185dp"
        android:layout_height="82dp"
        android:text="Kajian tentang iman dan islam"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="130dp" />

    <ImageView
        android:id="@+id/play2"
        android:layout_width="141dp"
        android:layout_height="83dp"
        android:src="@drawable/baseline_play"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="229dp" />

    <Button
        android:id="@+id/btnVideo2"
        android:layout_width="187dp"
        android:layout_height="83dp"
        android:text="Kajian tentang Kepemimpinan Rasulullah"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="229dp" />

    <ImageView
        android:id="@+id/play3"
        android:layout_width="141dp"
        android:layout_height="83dp"
        android:src="@drawable/baseline_play"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="327dp" />

    <Button
        android:id="@+id/btnVideo3"
        android:layout_width="185dp"
        android:layout_height="82dp"
        android:text="Kajian tentang indahnya puasa sunnah"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="328dp" />

    <ImageView
        android:id="@+id/play4"
        android:layout_width="141dp"
        android:layout_height="83dp"
        android:src="@drawable/baseline_play"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="426dp" />

    <Button
        android:id="@+id/btnVideo4"
        android:layout_width="185dp"
        android:layout_height="82dp"
        android:text="Kajian tentang Balligh"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="426dp" />

    <ImageView
        android:id="@+id/play5"
        android:layout_width="141dp"
        android:layout_height="83dp"
        android:src="@drawable/baseline_play"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="524dp" />

    <Button
        android:id="@+id/btnVideo5"
        android:layout_width="185dp"
        android:layout_height="82dp"
        android:text="Kajian tentang amalan dibulan puasa"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="525dp" />


</androidx.constraintlayout.widget.ConstraintLayout>