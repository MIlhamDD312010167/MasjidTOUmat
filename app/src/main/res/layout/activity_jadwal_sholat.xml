<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".JadwalSholat">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jadwal Sholat"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="100dp"
        android:src="@drawable/baseline_notifications"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="324dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/imageSubuh"
        android:layout_width="75dp"
        android:layout_height="69dp"
        android:src="@drawable/baseline_subuh"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="89dp" />

    <Button
        android:id="@+id/btnSubuh"
        android:layout_width="170dp"
        android:layout_height="38dp"
        android:text="Sholat Subuh"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="89dp" />

    <ImageView
        android:id="@+id/imageDzuhur"
        android:layout_width="75dp"
        android:layout_height="69dp"
        android:src="@drawable/baseline_dzuhur"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="195dp" />

    <Button
        android:id="@+id/btnDzuhur"
        android:layout_width="170dp"
        android:layout_height="38dp"
        android:text="Sholat Dzuhur"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="194dp" />

    <ImageView
        android:id="@+id/imageAshar"
        android:layout_width="75dp"
        android:layout_height="69dp"
        android:src="@drawable/baseline_ashar"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="304dp" />

    <Button
        android:id="@+id/btnAshar"
        android:layout_width="170dp"
        android:layout_height="38dp"
        android:text="Sholat Ashar"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="304dp" />

    <ImageView
        android:id="@+id/imageMaghrib"
        android:layout_width="75dp"
        android:layout_height="69dp"
        android:src="@drawable/baseline_maghrib"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="411dp" />

    <Button
        android:id="@+id/btnMaghrib"
        android:layout_width="170dp"
        android:layout_height="38dp"
        android:text="Sholat Maghrib"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="410dp" />

    <ImageView
        android:id="@+id/imageIsya"
        android:layout_width="75dp"
        android:layout_height="69dp"
        android:src="@drawable/baseline_isya"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="518dp" />

    <Button
        android:id="@+id/btnIsya"
        android:layout_width="170dp"
        android:layout_height="38dp"
        android:text="Sholat Isya"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="517dp" />
</androidx.constraintlayout.widget.ConstraintLayout>